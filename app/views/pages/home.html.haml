-# frozen_string_literal: true
.d-flex.flex-row
  .container-fluid.flex-grow-1
    .row.mt-5
      .col.text-center
        %h1
          %i.fas.fa-car
          Car Club

    .row.mt-3
      .col-12.col-md-10.offset-md-1.col-xl-6.offset-xl-3
        = simple_form_for :search, url: '' do |f|
          .input-group
            = f.input :query, label: false, wrapper: false, placeholder: 'Rechercher un v√©hicule'
            .input-group-append
              = f.submit 'Rechercher', class: "btn btn-primary"
    
    = render 'cars/list', cars: @last_cars

  .members.mt-3.d-none.d-lg-block
    - @members.each do |user|
      .user-card
        .user-card-image{class: user.connected? ? 'connected' : ''}
          = image_tag user.avatar, class: 'avatar'
        %p.text-truncate #{user.full_name}
        %span.text-muted (#{user.friends.size})


